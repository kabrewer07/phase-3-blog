

<% if @posts %>
	<ul class="post-list">
		<% @posts.each do |post| %>
			<li class="post">
				<h1><%= link_to post.title, post, class: 'post_title' %></h1>
				<div class="date"><%= post.created_at.strftime("%-m/%d/%Y") %></div>
				<%= post.content.html_safe %>
			</li>
		<% end %>
	</ul>
<% end %>

