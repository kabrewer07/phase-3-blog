<div class="container">
  <div class="row">
    <div class="home-top col-sm-12">
      <h3>Blog</h3>
    </div>
    <!-- end home-top -->
  </div>
  <!-- end row -->

	<% if current_user %>
		<%= link_to 'Add New Post', new_post_path, class: "new-post highlight" %>
		<%= render 'posts/form' %>
	<% end %>
</div>
<!-- end container -->
<section id="blog-no-sidebar">
  <div class="container blog-no-sidebar">
    <div class="row">
      <!-- start content -->
      <div class="col-sm-12 content">
      	<% if @posts %>
					<%= render @posts %>
				<% end %>
        
        <!-- article -->
        <div class="pagination text-center">
          <ul class="pagination">
            <li><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
